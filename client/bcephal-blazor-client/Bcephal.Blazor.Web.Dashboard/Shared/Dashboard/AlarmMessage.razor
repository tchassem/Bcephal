
<DxGridLayout RowSpacing="8px">
    <Rows>
        <DxGridLayoutRow Height="30%" />
        <DxGridLayoutRow Height="30%" />
    </Rows>
    <Columns>
        <DxGridLayoutColumn />
    </Columns>
    <Items>
        <DxGridLayoutItem Row="0" Column="0">
            <Template>
                <DxFormLayout>
                    <DxFormLayoutItem BeginRow=true Caption="@AppState["SendMail"]" ColSpanLg="2" ColSpanMd="2" ColSpanSm="2" ColSpanXl="2" ColSpanXs="2">
                        <Template>
                            <DxCheckBox Checked="@SendMail"></DxCheckBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem BeginRow=false Caption="@AppState["MailTitle"]" ColSpanLg="10" ColSpanMd="10" ColSpanSm="10" ColSpanXl="10" ColSpanXs="10">
                        <Template>
                            <DxTextBox @bind-Text="@MailTitle"></DxTextBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem BeginRow=true Caption="@AppState["MailMessage"]" CssClass="ml-auto" ColSpanLg="10" ColSpanMd="10" ColSpanSm="10" ColSpanXl="10" ColSpanXs="10">
                        <Template>
                            <DxTextBox @bind-Text="@MailMessage"></DxTextBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem BeginRow="true" Caption="@AppState["SendSms"]" ColSpanLg="2" ColSpanMd="2" ColSpanSm="2" ColSpanXl="2" ColSpanXs="2">
                        <Template>
                            <DxCheckBox Checked="@SendSms"></DxCheckBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem Caption="@AppState["SmsMessage"]" ColSpanLg="6" ColSpanMd="6" ColSpanSm="6" ColSpanXl="6" ColSpanXs="6">
                        <Template>
                            <DxTextBox @bind-Text="@SmsMessage"></DxTextBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem BeginRow="true" Caption="@AppState["SendChat"]" ColSpanLg="2" ColSpanMd="2" ColSpanSm="2" ColSpanXl="2" ColSpanXs="2">
                        <Template>
                            <DxCheckBox Checked="@SendChat"></DxCheckBox>
                        </Template>
                    </DxFormLayoutItem>
                    <DxFormLayoutItem Caption="@AppState["ChatMessage"]" ColSpanLg="6" ColSpanMd="6" ColSpanSm="6" ColSpanXl="6" ColSpanXs="6">
                        <Template>
                            <DxTextBox @bind-Text="@ChatMessage"></DxTextBox>
                        </Template>
                    </DxFormLayoutItem>
                </DxFormLayout>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="1" Column="0">
            <Template>
                <div class="d-flex flex-column pl-5 pr-5 pb-5 pt-5 mt-4">
                    <span class="pb-1" style="font-weight:700;font-size: .875rem;line-height: 1.5;">VARIABLES</span>
                    <div class="d-inline-flex pb-1">
                        <i class="bi bi-files mr-1"></i>
                        <span class="pb-1">$DATE$ = Current date</span>
                    </div>
                    <div class="d-inline-flex pb-1">
                        <i class="bi bi-files mr-1"></i>
                        <span class="pb-1">$DATETIME$  = Current date and time</span>
                    </div>
                    <div class="d-inline-flex pb-1">
                        <i class="bi bi-files mr-1"></i>
                        <span class="pb-1">$USER-LASTNAME$  = User lastname</span>
                    </div>
                    <div class="d-inline-flex pb-1">
                        <i class="bi bi-files mr-1"></i>
                        <span class="pb-1">$USER-FIRSTNAME$  = User firstname</span>
                    </div>
                    <div class="d-inline-flex pb-1">
                        <i class="bi bi-files mr-1"></i>
                        <span class="pb-1">$CELL : &lt cellvalue &gt $  = Excell cell value</span>
                    </div>
                </div>
            </Template>
        </DxGridLayoutItem>
    </Items>

</DxGridLayout>


@code {

        [Inject]
        private AppState AppState { get; set; }

    bool SendMail { get; set; }

    bool SendSms { get; set; }

    bool SendChat { get; set; }

    string MailTitle { get; set; }

    string MailMessage { get; set; }

    string SmsMessage { get; set; }

    string ChatMessage { get; set; }


}

