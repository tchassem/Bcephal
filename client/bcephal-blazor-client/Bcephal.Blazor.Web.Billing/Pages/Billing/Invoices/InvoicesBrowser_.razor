@inherits AbstractNewGridComponent<Invoice, InvoiceBrowserData>
@{
    base.BuildRenderTree(__builder);
}
<BaseModalComponent Title="@AppState["invoice.validation"]" Width="450px"
                    @bind-ShowModal=ValidationConfirmation
                    OkHandler="Validate_"
                    CancelHandler="CancelValidation"
                    IsConfirmation=@IsConfirmation>
    <div class="d-flex">
        <i class="bi-question-circle text-primary align-self-start mr-4" style="font-size: 1.5rem;"></i>
        <div>
            <p class="mb-1 p-0">@InvoiceValidationMessage1</p>
            <p class="mb-1 p-0">@InvoiceValidationMessage2</p>
            <p>@AppState["confirmation.continue"]</p>
        </div>
    </div>
</BaseModalComponent>

<BaseModalComponent Title="@AppState["invoice.reset"]" Width="450px"
                    @bind-ShowModal=ResetConfirmation
                    OkHandler="Reset_"
                    CancelHandler="CancelReset"
                    IsConfirmation=@IsConfirmation>
    <div class="d-flex">
        <i class="bi-question-circle text-primary align-self-start mr-4" style="font-size: 1.5rem;"></i>
        <div>
            <p class="mb-1 p-0">@InvoiceResetMessage1</p>
            <p class="mb-1 p-0">@InvoiceResetMessage2</p>
            <p class="mb-1 p-0">@InvoiceResetMessage3</p>
            <p>@AppState["confirmation.continue"]</p>
        </div>
    </div>
</BaseModalComponent>

<BaseModalComponent Title="@AppState["invoice.reset.validation"]" Width="450px"
                    @bind-ShowModal=ResetValidationConfirmation
                    OkHandler="ResetValidation_"
                    CancelHandler="CancelResetValidation"
                    IsConfirmation=@IsConfirmation>
    <div class="d-flex">
        <i class="bi-question-circle text-primary align-self-start mr-4" style="font-size: 1.5rem;"></i>
        <div>
            <p class="mb-1 p-0">@InvoiceResetValidationMessage1</p>
            <p class="mb-1 p-0">@InvoiceResetValidationMessage2</p>
            <p>@AppState["confirmation.continue"]</p>
        </div>
    </div>
</BaseModalComponent>

